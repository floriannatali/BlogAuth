<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="acme.demo.example.class">Acme\DemoBundle\Example</parameter>
    </parameters>
    -->
    <services>
        <service id="app_bundle.jwt_builder" class="Lcobucci\JWT\Builder" public="false">
        </service>

        <service id="app_bundle.jwt_key" class="Lcobucci\JWT\Signer\Key" public="false">
            <argument type="string">file://%jwt_private_key_file%</argument>
        </service>

        <service id="app_bundle.jwt_signer" class="Lcobucci\JWT\Signer\Rsa\Sha256" public="false">
        </service>

        <service id="app_bundle.token_service" class="AppBundle\Service\TokenService">
            <argument type="service" id="app_bundle.jwt_builder" />
            <argument type="service" id="app_bundle.jwt_signer" />
            <argument type="service" id="app_bundle.jwt_key" />
        </service>
    </services>

</container>